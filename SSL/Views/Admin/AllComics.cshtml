@model List<SSL.Models.Comics >

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
    <link rel="stylesheet" href="~/Content/app.css" class="cs">
    <link rel="stylesheet" href="~/Content/bootstrap.css" class="cs">
    <script src="~/Content/code.jquery.com_jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
</head>
<body>
    @{Html.RenderAction("Navbar", "Account");}


    <table class="table-dark table-bordered table-striped text-center mt-4 w-100" id="mytable">
        <tr>
            <th>Comic Name</th>
            <th>Summary</th>
            <th>Genre</th>
            <th>Pages</th>
            <th>Date Added</th>
            <th>Publisher</th>
            <th>Comic</th>
            <th>Actions</th>
           
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td style="font-size:small">@user.Summary</td>
                <td>@user.Genre</td>
                <td>@user.Pages</td>
                <td>@user.DateAdded</td>
                <td>@user.Publisher</td>
               
                    <td><img src="~/Media/turnjs4/samples/docs/@user.ReadOnline/1.jpg" width="700px" /></td>
                
                    <td>
                        <a href="@Url.Action("Edit", "Comics", new { id = user.Id })" style="background-color: yellowgreen; padding: 14px; list-style: none; border-radius: 9%; margin-top: 10px; display: inline-block; color: white; text-decoration: none;">Edit</a>
                      &nbsp;&nbsp;  <a onclick="confirm('Are You Sure You want to delete this comic ?')" href="@Url.Action("Delete", "Comics", new { id = user.Id })" style="background-color: red; padding: 14px; list-style: none; border-radius: 9%; margin-top: 10px; display: inline-block; color: white; text-decoration: none;">Delete</a>
                    </td>
               
            </tr>
        }
    </table>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>


</body>
</html>
